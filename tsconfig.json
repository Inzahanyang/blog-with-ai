{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.tsx",
    "pages/api/generatePost.ts",
    "pages/_app.ts",
    "pages/token-topup.tsx",
    "pages/post/new.tsx",
    "pages/api/auth/[...auth0].ts",
    "pages/api/addTokens.ts",
    "pages/post/[postId].tsx",
    "pages/_app.tsx",
    "context/postContext.js"
  ],
  "exclude": ["node_modules"]
}
